<%- include('partials/header') -%>

<div style="margin-top: 160px;"></div>

<div class="container">
    <div class="row">
        <div class="col">
            <img src="<%= eachRecipe[0].strDrinkThumb%>" id="img_recip">
        </div>
        <div class="col-4" id="text_recip">
            <div id="recipe_text">
            <h2  style="color: #e85d04;"><%= eachRecipe[0].strDrink%></h2>
            <h5  style="color: black;">Ingredients:</h5>
            <%for(let i = 1; i < 16; i++){%>
                <%if(eachRecipe[0][`strIngredient${i.toString()}`]){%>
                <p style="color: black;"><%=eachRecipe[0][`strIngredient${i.toString()}`]%><br/>
                <%}}%>
            </p>
        </div>
        </div>
    </div>

    <div id="prepare_text">
    <h2>How to prepar?</h2>
        <p>  <%= eachRecipe[0].strInstructions%></p>
        </div>
</div>


<%- include('partials/footer') -%>
